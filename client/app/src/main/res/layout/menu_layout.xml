<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D2755AEA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addSeviceButt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#AFA2F1"
            android:minHeight="48dp"
            android:onClick="addService"
            android:text="Add Service"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/browseSeviceButt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#AFA2F1"
            android:minHeight="48dp"
            android:onClick="browseService"
            android:text="Browse Service"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/chatButt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#AFA2F1"
            android:minHeight="48dp"
            android:onClick="enterChat"
            android:text="Chat"
            android:textAllCaps="false"
            android:textSize="24sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>