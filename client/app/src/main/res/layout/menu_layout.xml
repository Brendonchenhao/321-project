<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#52DCCEFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addSeviceButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#AFA2F1"
            android:onClick="addService"
            android:text="Add Service" />

        <TextView
            android:id="@+id/stuff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old stuff:" />

        <Button
            android:id="@+id/getSuggestButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#AFA2F1"
            android:onClick="getService"
            android:text="Get Suggestions " />

        <Button
            android:id="@+id/reqExButt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#AFA2F1"
            android:onClick="requestExample"
            android:text="Request Example" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>